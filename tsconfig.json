{
  "compilerOptions": {
    "esModuleInterop": true,
    "skipLibCheck": true,

    "target": "ES2022",

    "allowJs": true,
    "moduleDetection": "force",
    "moduleResolution": "bundler",

    "isolatedModules": true,
    "verbatimModuleSyntax": true,

    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,

    "module": "preserve",
    "noEmit": true,

    "lib": ["ES2022"],

    "baseUrl": "."
  },
  "include": ["src"]
}
